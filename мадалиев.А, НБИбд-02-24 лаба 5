n = int(input("Введите количество сенокосилок: "))
m = float(input("Введите время работы первой сенокосилки (в часах): "))

total_time = 0  
i = 0 

while i < n:
    total_time += m + i * (1 / 6)  
    i += 1 

print(f"Общее время работы всей бригады: {total_time:.2f} часов")






n = int(input("Введите количество сенокосилок: "))
m = float(input("Введите время работы первой сенокосилки (в часах): "))

total_time = 0 
i = 0  

# Цикл с постусловием
while True:
    total_time += m + i * (1 / 6)  
    i += 1  
    if i >= n:  
        break

print(f"Общее время работы всей бригады: {total_time:.2f} часов")
